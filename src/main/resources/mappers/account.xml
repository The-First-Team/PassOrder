<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.korit.passorder.respository.account.AccountRepository">


    <select id="findUserByUsername" parameterType="String" resultType="com.korit.passorder.entity.UserMst">
        select
            um.user_id,
            um.username,
            um.password,
            um.name,
            um.email,

            rm.role_id,
            rm.role_name
        from
            userMst um
            left outer join roleMst rm on(rm.role_id = um.role_id)
        where
            um.username = #{username}
    </select>

    <select id="findUserByUserId" parameterType="Integer" resultType="com.korit.passorder.entity.UserMst">
        select
            um.user_id,
            um.username,
            um.password,
            um.name,
            um.email,

            rm.role_id,
            rm.role_name
        from
            userMst um
            left outer join roleMst rm on(rm.role_id = um.role_id)
        where
            um.user_id = #{userId}
    </select>

    <insert id="saveUser"
            parameterType="com.korit.passorder.entity.UserMst"
            useGeneratedKeys="true"
            keyProperty="userId">
        insert into userMst
        values (0, #{username}, #{password}, #{name}, #{email}, #{roleId})
    </insert>

    <insert id="saveAdminCafeInfo"
            parameterType="com.korit.passorder.entity.CafeMst"
            useGeneratedKeys="true"
            keyProperty="cafeId">
        insert into cafeMst
        values (0, #{cafeName}, #{address}, #{phone}, #{userId})
    </insert>

</mapper>